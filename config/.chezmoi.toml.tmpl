{{- $osId := .chezmoi.os -}}
{{- if (and (eq .chezmoi.os "linux") (hasKey .chezmoi.osRelease "id")) -}}
{{- 	$osId = printf "%s-%s" .chezmoi.os .chezmoi.osRelease.id -}}
{{- end -}}

{{- $email := promptStringOnce . "email" "Your email address" -}}
{{- $name := promptStringOnce . "name" "Your name" -}}
{{- $isWork := promptBoolOnce . "isWork" "Is this computer work related?" -}}
{{- $hostname := promptStringOnce . "hostname" "The hostname that will be applied to this machine" -}}

[data]
	osId = {{ $osId | quote }}
    os = {{ .chezmoi.os | quote }}
    isWork = {{ $isWork }}
	email = {{ $email | quote }}
	name = {{ $name | quote }}
    hostname = {{ $hostname | quote }}
